#!/bin/bash

# AutoZig Pre-Commit Hook
# This hook runs before committing to ensure code quality

set -e

YELLOW='\033[1;33m'
GREEN='\033[0;32m'
RED='\033[0;31m'
NC='\033[0m' # No Color

echo -e "${YELLOW}ğŸ” Running pre-commit checks...${NC}"

# Step 1: Auto-format code
echo -e "\n${YELLOW}ğŸ¨ Auto-formatting code...${NC}"
if ! cargo fmt --all; then
    echo -e "${RED}âŒ Auto-formatting failed!${NC}"
    exit 1
fi
echo -e "${GREEN}âœ… Code auto-formatted${NC}"

# Step 2: Verify formatting (should pass after auto-format)
echo -e "\n${YELLOW}ğŸ“ Verifying code formatting...${NC}"
if ! cargo fmt --all -- --check; then
    echo -e "${RED}âŒ Code formatting check failed unexpectedly!${NC}"
    exit 1
fi
echo -e "${GREEN}âœ… Code formatting verified${NC}"

# Step 3: Clippy lints
echo -e "\n${YELLOW}ğŸ” Running clippy...${NC}"
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo -e "${RED}âŒ Clippy found issues!${NC}"
    echo -e "${YELLOW}ğŸ’¡ Fix the clippy warnings before committing${NC}"
    exit 1
fi
echo -e "${GREEN}âœ… Clippy checks passed${NC}"

echo -e "\n${GREEN}ğŸ‰ All pre-commit checks passed! Ready to commit.${NC}"
exit 0